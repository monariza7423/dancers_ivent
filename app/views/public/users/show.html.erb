<h1>マイページ</h1>
<h2>登録情報</h2>

<table>
  <tr>
    <th>氏名</th>
    <td><%= @user.last_name %><%= @user.first_name %></td>
  </tr>
  <tr>
    <th>かな</th>
    <td><%= @user.last_name_kana %><%= @user.first_name_kana %></td>
  </tr>
  <tr>
    <th>郵便番号</th>
    <td><%= @user.postal_code %></td>
  </tr>
  <tr>
    <th>住所</th>
    <td><%= @user.address %></td>
  </tr>
  <tr>
    <th>電話番号</th>
    <td><%= @user.telephone_number %></td>
  </tr>
  <tr>
    <th>メールアドレス</th>
    <td></td>
  </tr>
</table>

<% @teams.each do |team| %>
  <%= team.name %>
<% end %>

<%= link_to "編集", edit_user_path(current_user) %>

